@page
@model BookListRazor._Pages_Books.IndexModel

@{
    ViewData["Title"] = "Lista de libros";
}

<br/>

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Lista de libros</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">
            Crear nuevo libro
        </a>
    </div>
</div>

<div class="col-12 border p-3 mt-3">
    <form method="post">
        @if(Model.Books.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        <label asp-for="Books.FirstOrDefault().Name"></label>
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author) *@
                        <label asp-for="Books.FirstOrDefault().Author"></label>
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Books)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Author)
                        </td>
                        <td>
                            <button class="btn btn-danger btn-sm">Eliminar</button>
                            <a class="btn btn-success btn-sm text-white" href="">Editar</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No hay libros disponibles</p>
        }
    </form>
</div>